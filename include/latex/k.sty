%Arguments: #1: true = do line breaking, false = don't do line breaking.
% #2 = LHS, #3 = RHS
\newcommand{\reduce}[3][true]{%
  \savebox{\k@reduceBox}{\reduceImpl[#1]{#2}{#3}}%
  \allowbreak%
  \usebox{\k@reduceBox}%
  \allowbreak%
}

\newcommand{\reduceImpl}[3][true]{%
  \hbox{%
  \begin{tikzpicture}[baseline=(top.south),
                      inner xsep=0pt,
                      inner ysep=.3333ex,
                      minimum width=2em,
                      align=left]%align changes the style a little
    \path
    node (top) [inner ysep=1ex]{%
      \reduceSide[#1]{#2}%
    }
    (top.south)
    node (bottom) [anchor=north, inner ysep=.5ex] {%
      \reduceSide[#1]{#3}%
    };
    %%% Draw the horizontal line:
    % Line with chevron.
    %\path[draw,thin,solid] let \p1 = (current bounding box.west),
    %                           \p2 = (current bounding box.east),
    %                           \p3 = (top.south)
    %                       in (top.south) ++(0,-1.5pt) -- ++(-2pt,1.5pt) -- (\x1,\y3)
    %                          (top.south) ++(0,-1.5pt) -- ++(2pt,1.5pt)  -- (\x2,\y3);
    %%% Other options:
    % Solid line.
    \path[draw,thin,solid] let \p1 = (current bounding box.west),
                               \p2 = (current bounding box.east),
                               \p3 = (top.south)
                           in (\x1,\y3) -- (\x2,\y3);
    % Solid arrow (augmenting the solid line).
    \path[fill] (top.south) ++(2pt,0) -- ++(-4pt,0) -- ++(2pt,-1.5pt) -- cycle;
  \end{tikzpicture}%
  }%
}

