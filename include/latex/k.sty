%Computes \kMaxCellLen, \kMaxReduceLen
% #1 = name
\newcommand{\computeMaxReduceLen}[1][]{%
  \setlength{\kMaxCellLen}{\columnwidth-\ruleHangindent}%
  %The borders around a reduce are cell wals of maximal height
  %with cell name = name of innermost cell.
  \ifthenelse{\equal{#1}{}}%\isempty doesn't work here
    {\setlength{\kMaxReduceLen}{\kMaxCellLen}}
    {%
      %just for computing the width
      \saveCellBox{#1}{}{\rule{0in}{5\baselineskip} \ \ellipses}{}%
      %
      \setlength{\k@reduceBorders}{\widthof{\usebox{\kCellBox}}}%
      \setlength{\kMaxReduceLen}{\kMaxCellLen-\k@reduceBorders}%
    }%
  %
  %TODO set to 0 when elliminating frames
  \setlength{\k@frameLen}{\widthof{\fbox{}}-2pt}%
  \setlength{\kMaxReduceLen}{\kMaxReduceLen-\k@frameLen}%Only when frames are used. Seems unncecessary now.
  %Removing does not produce extra overfulls, but an extra new line
  %if a multiline rewrite is at the beginning of the rule
}

